{
  "env": {
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },

  "rules": {
    "indent": ["error", "tab"],
    "brace-style": ["error", "allman", { "allowSingleLine": true }],
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "space-in-parens": ["error", "always", { "exceptions": ["empty"] }]
  }
}